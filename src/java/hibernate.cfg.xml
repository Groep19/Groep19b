<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/groep19_festivals?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="Hibernate/Facpercamp.hbm.xml"/>
    <mapping resource="Hibernate/Festivals.hbm.xml"/>
    <mapping resource="Hibernate/Faciliteiten.hbm.xml"/>
    <mapping resource="Hibernate/Tickets.hbm.xml"/>
    <mapping resource="Hibernate/Bands.hbm.xml"/>
    <mapping resource="Hibernate/Geregistreerdegebruikers.hbm.xml"/>
    <mapping resource="Hibernate/Bandsperfestival.hbm.xml"/>
    <mapping resource="Hibernate/Tickettypesperfestival.hbm.xml"/>
    <mapping resource="Hibernate/Podia.hbm.xml"/>
    <mapping resource="Hibernate/Tickettypes.hbm.xml"/>
    <mapping resource="Hibernate/Campings.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
